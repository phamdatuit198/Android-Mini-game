<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jp.vfja.android.homerun"
      android:versionCode="1"
      android:versionName="1.0.0">

    <uses-sdk android:minSdkVersion="8"/>
    <uses-feature android:glEsVersion="0x00020000" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:icon="@drawable/icon" >
        <activity
            android:name="jp.vfja.android.homerun.SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="maru-scorecenter_app"
            android:value="true" />

        <activity
            android:name="jp.maru.scorecenter.ScoreCenterActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale|uiMode" >
        </activity>

        <receiver
            android:name="jp.maru.scorecenter.ScoreCenterReceiver"
            android:exported="true"
            android:permission="android.permission.INTERNET" >
            <intent-filter>
                <action android:name="MARU_SCORE_CENTER_SYNC" />
                <action android:name="jp.vfja.android.homerun.MARU_SCORE_CENTER_WELCOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- 3-2. (3) ScoreCenterServiceの定義 -->
        <service
            android:name="jp.maru.scorecenter.ScoreCenterService"
            android:exported="true"
            android:permission="android.permission.INTERNET"
            android:process=":jp.maru.scorecenter.service" />

        <activity
            android:name="jp.vfja.android.homerun.TopActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="jp.vfja.android.homerun.RankingActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="jp.vfja.android.homerun.ResultActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
           
        </activity>
        <activity
            android:name="jp.vfja.android.homerun.ManualActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="jp.vfja.android.homerun.InfoActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
         <activity android:name=".HomeRun"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:configChanges="orientation">
            
        </activity>
	<meta-data android:name="NendDebuggable" android:value="true" />
    </application>
</manifest> 
