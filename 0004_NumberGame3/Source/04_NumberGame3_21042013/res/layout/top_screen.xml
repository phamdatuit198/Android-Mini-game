<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_background" >

    <RelativeLayout
        android:id="@+id/rl_components"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/img_top_title"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/top_game_title" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_top_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_play_bg" />

        <Button
            android:id="@+id/btn_rankin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_rankin_bg" />

        <Button
            android:id="@+id/btn_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_rankin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_manual_bg" />

        <Button
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_manual"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_info_bg" />

        <Button
            android:id="@+id/btn_vitalify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_vitalify_bg" />

        <ImageView
            android:id="@+id/img_chickens"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_below="@id/btn_vitalify"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-35dp"
            android:layout_toRightOf="@id/btn_vitalify"
            android:background="@drawable/top_chickens" />
    </RelativeLayout>

    <include
        android:id="@+id/ads"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_adv_height"
        android:layout_alignParentBottom="true"
        layout="@layout/ads_view" />

</RelativeLayout>